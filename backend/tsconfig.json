{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "lib": ["ES2022"],
    "moduleResolution": "node",
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true
  },
  "include": ["src/index.ts", "src/db/**/*", "src/routes/**/*", "src/middleware/**/*", "src/utils/**/*"],
  "exclude": ["node_modules", "dist", "src/admin/**/*", "src/auth/**/*", "src/chat/**/*", "src/orders/**/*", "src/payments/**/*", "src/reviews/**/*", "src/tasks/**/*", "src/users/**/*", "src/files/**/*", "src/app.*", "src/main.ts", "src/config/**/*", "src/common/**/*"]
}

